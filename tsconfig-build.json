{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "sourceMap": false,
    "strictNullChecks": true,
    "module": "es2015",
    "allowJs": false,
    "baseUrl": "./",
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@src*": ["src*"],
      "@test*": ["test*"]
    },
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*", "index.ts"],
  "inlineSources": true,
  "inlineSourceMap": true,
  "exclude": [
    "node_modules",
    "dist"
  ]
}
