{
  "name": "spruce",
  "version": "0.10.1",
  "description": "Automatically resolve sass-linting issues through CLI",
  "main": "./dist/spruce.js",
  "bin": {
    "spruce": "./dist/index.js"
  },
  "scripts": {
    "test": "jest --verbose --coverage --no-watchman",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "coverage": "open ./coverage/lcov-report/index.html",
    "tsc": "tsc --noEmit -p ./tsconfig.json",
    "format:src": "find ./src/ -name '*.ts*' | xargs prettier --write --config ./.prettierrc --config-precedence file-override",
    "format:test": "find ./test/ -name '*.ts*' | xargs prettier --write --config ./.prettierrc --config-precedence file-override",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "prebuild": "rm -rf dist/",
    "build": "npm run build:ts && npm run build:chmod && npm run build:config",
    "build:ts": "tsc -p ./tsconfig-build.json --module commonjs",
    "build:chmod": "chmod +x dist/index.js",
    "build:config": "cp -r src/config dist",
    "precommit": "lint-staged",
    "prepush": "npm run lint && npm run tsc",
    "docs": "typedoc --out ./docs ./src --excludeExternals --excludePrivate --externalPattern '*node_modules*' --tsconfig ./tsconfig-build.json  --mode file  --theme minimal",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "npm run lint:fix",
      "npm run format:src",
      "npm run format:test",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/srowhani/spruce.git"
  },
  "bugs": {
    "url": "https://github.com/srowhani/spruce/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/srowhani/spruce#README.md",
  "author": "Seena Rowhani (srowhani)",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.3.2",
    "commander": "^2.15.1",
    "glob": "^7.1.2",
    "gonzales-pe-sl": "^4.2.3",
    "js-yaml": "^3.11.0",
    "raven": "^2.6.2",
    "sass-lint": "^1.12.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@semantic-release/git": "^4.0.1",
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.6",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.5",
    "prettier": "^1.10.2",
    "semantic-release": "15.0.2",
    "travis-deploy-once": "^4.4.1",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1",
      "@test/(.*)": "<rootDir>/test/$1"
    },
    "testRegex": "(/test/src/.*|(\\.|/)(test|spec))\\.ts$",
    "coveragePathIgnorePatterns": [
      "dist",
      "/node_modules/",
      "test"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json"
        ]
      }
    ]
  }
}
